<main>

  <div class='container px-5 px-sm-0'>

  <div class='row'>
    <div class='col-md-3'>

<%= render 'users/list', user: @user %>
<!--userは部分テンプレート内で使う。@userはコントローラーから渡される。-->

<%= render 'books/list', book: @book_new %>

    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, size:"100x100", format: 'jpeg', fallback: "no-image-mini.jpg" %><br>
        <%= link_to @user.name, user_path(@user.id) %></td>
        <td><%= link_to @book.title, @book %></td>
        <td><%= @book.body %></td>
        <% if @user.id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_30993" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" , class: "btn btn-sm btn-danger destroy_book_30993" %></td>
        <% end %>
      </tr>
  </tbody>
</table>
